<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeNoBar" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <color name="custom_theme_color">#fffffefd</color>

    <style name="CustomFontStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/custom_theme_color</item>/>
    </style>

    <style name="CustomFontStyle.LargeFont">
        <item name="android:textSize">20pt</item>
    </style>

    <style name="CustomFontStyle.MediumFont">
        <item name="android:textSize">10pt</item>
    </style>

    <style name="CustomFontStyle.MediumFont.Black">
        <item name="android:textColor">#000000</item>/>
    </style>

    <style name="CustomFontStyle.SmallFont">
        <item name="android:textSize">7pt</item>
    </style>

    <style name="CustomFontStyle.LargeFont.Blue">
        <item name="android:textColor">#ff3b52ff</item>/>
    </style>

    <style name="CustomFontStyle.MediumFont.Blue">
        <item name="android:textColor">#ff3b52ff</item>/>
    </style>

    <style name="CustomFontStyle.SmallFont.Black">
        <item name="android:textColor">#000000</item>/>
    </style>
</resources>